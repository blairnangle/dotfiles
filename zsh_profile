#@IgnoreInspection BashAddShebang

USERNAME=blairnangle

# shellcheck source=/Users/${USERNAME}/dotfiles/functions
source /Users/${USERNAME}/dotfiles/functions

# If you come from bash you might have to change your $PATH
export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation
export ZSH=/Users/${USERNAME}/.oh-my-zsh

# Path to Golang workspace
export GOPATH=$HOME/gocode

export plugins=(
  git
)

source ${ZSH}/oh-my-zsh.sh

# Source my own alias file after sourcing oh-my-zsh to allow my aliases to overwrite any oh-my-zsh aliases with the same names
# shellcheck source=/Users/${USERNAME}/dotfiles/aliases
source /Users/${USERNAME}/dotfiles/aliases

# Needed for autocomplete
autoload -U +X bashcompinit && bashcompinit

# Enable pyenv
eval "$(pyenv init -)"
PATH="$(pyenv root)/shims:$PATH"

# Use pyenv-installed Python 3 by default
alias python='/Users/${USERNAME}/.pyenv/shims/python3'
alias pip='/Users/${USERNAME}/.pyenv/shims/pip3'

# Maintain the ability to use Python 2
alias python2=/usr/bin/python
alias pip2=/usr/local/bin/pip

# Android development
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools

# The next line updates PATH for the Google Cloud SDK
# shellcheck source=/Users/${USERNAME}/Downloads/google-cloud-sdk/path.zsh
if [ -f "/Users/${USERNAME}/Downloads/google-cloud-sdk/path.zsh.inc" ]; then . "/Users/${USERNAME}/Downloads/google-cloud-sdk/path.zsh.inc"; fi

# The next line enables shell command completion for gcloud
# shellcheck source=/Users/${USERNAME}/Downloads/google-cloud-sdk/completion.zsh.inc
if [ -f "/Users/${USERNAME}/Downloads/google-cloud-sdk/completion.zsh.inc" ]; then . "/Users/${USERNAME}/Downloads/google-cloud-sdk/completion.zsh.inc"; fi

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                   # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" # This loads nvm bash_completion

# Use Starship prompt
eval "$(starship init zsh)"

# Use recommended GitHub Copilot CLI aliases
eval "$(github-copilot-cli alias -- "$0")"

# Generated for envman. Do not edit.
[ -s "$HOME/.config/envman/load.sh" ] && source "$HOME/.config/envman/load.sh"
