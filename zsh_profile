#@IgnoreInspection BashAddShebang
source /Users/blairnangle/dotfiles/zsh/functions

# If you come from bash you might have to change your $PATH.
export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH=/Users/blairnangle/.oh-my-zsh

# Path to Golang workspace
export GOPATH=$HOME/gocode

# Sapien deploy tool
export PATH="${PATH}":~/sapien-health/deploy

ZSH_THEME="wezm"

plugins=(git)

source ${ZSH}/oh-my-zsh.sh

# Source my own alias file after sourcing oh-my-zsh to allow my aliases to overwrite any oh-my-zsh aliases with the same names
source /Users/blairnangle/dotfiles/zsh/aliases

# Adds yellow timestamp (dd/mm/yy, 24-hour) to prompt
PROMPT='%{$fg[yellow]%}[%D{%f/%m/%y} %D{%K:%M:%S}] '${PROMPT}

autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C /usr/local/bin/vault vault

complete -o nospace -C /usr/local/bin/consul consul

complete -o nospace -C /usr/local/bin/nomad nomad

# Use Python 3 by default
alias python=/usr/local/bin/python3
alias pip=/usr/local/bin/pip3

# Maintain the ability to use Python 2
alias python2=/usr/bin/python
alias pip2=/usr/local/bin/pip

# Android development
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools

# Access to functions in personal "tools" project
export PATH=$PATH:~/personal/tools

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/blairnangle/Downloads/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/blairnangle/Downloads/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/blairnangle/Downloads/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/blairnangle/Downloads/google-cloud-sdk/completion.zsh.inc'; fi

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
